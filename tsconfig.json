{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "baseUrl": "./",
    "declaration": true, // 生成 .d.ts 文件
    "emitDeclarationOnly": true, // 只生成类型声明（配合 vue-tsc）
    "target": "ESNext", // 建议目标改为 ESNext，和 Vite 对齐
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node", "vue"]
  },
  "include": [
    "index.ts",
    "src/core/**/*",
    "src/types/**/*.ts",
    "components/**/*.vue",
    "src/types/**/*.d.ts"
  ]
}
